@model IEnumerable<SaganDex.Entidades.Usuarios>

@{
    ViewData["Title"] = "Usuários";
}
<link rel="stylesheet" type="text/css" href="~/css/usuario.css" />
<nav aria-label="breadcrumb" style="background-color:lightslategrey">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">SaganDex</a></li>        
        <li class="breadcrumb-item active" aria-current="page">Lista de Usuários</li>
    </ol>
</nav>
<body>
    <h1 style="color: blue">Lista de Usuários</h1>

    <div class="card border-0">
        <div class="card-header">Pesquisar</div>
        <div class="card-body">
            <form action="/Usuarios/Index" method="get">
                <div class="row border-0">
                    <div class="col-2">
                        <a href="/Usuarios/Create" class="btn btn-success">
                            Novo Usuário
                        </a>
                    </div>
                    <div class="col-2">
                        <select name="TipoPesquisa" class="form-control">
                            <option value="Todos">Todos</option>
                            <option value="PorNome">Por Nome</option>
                            <option value="PorWhatsApp">Por WhatsApp</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <input type="text" name="query" class="form-control" placeholder="Digite sua busca" />
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary" type="submit">Pesquisar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-striped table-borderless">
        <thead >
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WhatsApp)
                </th>
                

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WhatsApp)
                    </td>
                    

                    <td>
                        <a href="Usuarios/Edit/@item.Id" class="btn btn-warning">Editar</a>
                        <a href="Usuarios/Delete/@item.Id" class="btn btn-danger">Excluir</a>
                        <!--@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        -->
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>