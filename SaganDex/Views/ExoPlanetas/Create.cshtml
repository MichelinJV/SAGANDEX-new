@model SaganDex.Entidades.ExoPlanetas

@{
    ViewData["Title"] = "Cadastrar";
}
<link rel="stylesheet" type="text/css" href="~/css/formulario.css" />
<nav aria-label="breadcrumb" style="background-color:lightslategrey">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">SaganDex</a></li>
        <li class="breadcrumb-item"><a asp-controller="ExoPlanetas" asp-action="Index">Catálogo de Mundos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cadastrar</li>
    </ol>
</nav>
<h1 style="color: #00997B">Mundos</h1>

<h4>Cadastrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" placeholder=" ID "/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder=" Nome "/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Constelacao" class="control-label"></label>
                <input asp-for="Constelacao" class="form-control" placeholder=" Constelação "/>
                <span asp-validation-for="Constelacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstrelaMae" class="control-label"></label>
                <input asp-for="EstrelaMae" class="form-control" placeholder=" Estrela-mãe "/>
                <span asp-validation-for="EstrelaMae" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" placeholder=" Categoria "/>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distancia" class="control-label"></label>
                <input asp-for="Distancia" class="form-control" placeholder=" Distância "/>
                <span asp-validation-for="Distancia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:white">Voltar ao catálogo</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
