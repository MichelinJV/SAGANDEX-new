<body>
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <nav aria-label="breadcrumb" style="background-color:lightslategrey">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">SaganDex</a></li>
            <li class="breadcrumb-item active" aria-current="page">Login</li>
        </ol>
    </nav>

    <br />
    <br />
    
    

    @if (TempData["erro"] != null)
    {
        <div class="alert alert-danger">
            @TempData["erro"] 
        </div>
    }
    <div class="row">
        <div class="col-md-4">
            <h1>Faça seu Login</h1>
            <br />
            <form action="/Login/Entrar" method="post">
                <div class="form-group">
                    <label style="color:lightyellow"> USUÁRIO </label>
                    <input type="text" name="login" class="form-control " placeholder=" Usuário " required="">
                </div>

                <br />
                <div class="form-group">
                    <label style="color:lightyellow"> SENHA </label>
                    <input type="password" name="senha" class="form-control" placeholder="Senha" required="">
                </div>

                <div class="form-group">
                    <button class="btn btn-secondary" type="submit">Logar</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <img id ="carl" src="/carl1.jpg" />
        </div>
    </div>
</body>